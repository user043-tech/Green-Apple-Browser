<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <title>Flexibler Browser</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }
        #browser {
            width: 100%;
            height: calc(100vh - 50px);
            border: none;
        }
        #controls {
            background-color: #f1f1f1;
            padding: 10px;
            display: flex;
            align-items: center;
        }
        #url {
            flex-grow: 1;
            margin-right: 10px;
            padding: 5px;
        }
        #go-button, #home-button {
            padding: 5px 10px;
            margin-right: 5px;
        }
        #status {
            margin-left: 10px;
            color: green;
        }
    </style>
</head>
<body>
    <div id="controls">
        <button id="home-button" onclick="goHome()">Startseite</button>
        <input type="text" id="url" placeholder="https://www.beispiel.com">
        <button id="go-button" onclick="navigateTo()">Gehen</button>
        <span id="status"></span>
    </div>
    
    <iframe id="browser" src="https://www.google.com"></iframe>

    <script>
        const iframe = document.getElementById('browser');
        const urlInput = document.getElementById('url');
        const statusElement = document.getElementById('status');
        
        // Startseite definieren
        const HOME_PAGE = 'https://www.google.com';

        function navigateTo() {
            const url = urlInput.value.trim();
            if (!url) return;

            try {
                // Vollständige URL sicherstellen
                const fullUrl = ensureFullUrl(url);
                
                // URL im iframe laden
                iframe.src = fullUrl;
                
                // Status aktualisieren
                updateStatus(`Lädt: ${fullUrl}`);
            } catch (error) {
                alert('Ungültige URL: ' + error.message);
            }
        }

        function ensureFullUrl(url) {
            // Überprüft und vervollständigt URLs
            if (!url.startsWith('http://') && !url.startsWith('https://')) {
                url = 'https://' + url;
            }
            
            // URL-Objekt erstellen zur Validierung
            new URL(url);
            
            return url;
        }

        function goHome() {
            iframe.src = HOME_PAGE;
            urlInput.value = HOME_PAGE;
            updateStatus('Zurück zur Startseite');
        }

        function updateStatus(message) {
            statusElement.textContent = message;
            setTimeout(() => {
                statusElement.textContent = '';
            }, 3000);
        }

        // Sicherheits- und Navigationserweiterungen
        iframe.addEventListener('load', function() {
            try {
                const currentUrl = iframe.contentWindow.location.href;
                urlInput.value = currentUrl;

                // Links im iframe abfangen und modifizieren
                const iframeDoc = iframe.contentDocument || iframe.contentWindow.document;
                const links = iframeDoc.getElementsByTagName('a');
                
                for (let link of links) {
                    link.addEventListener('click', function(event) {
                        const href = this.getAttribute('href');
                        if (href && href.startsWith('http')) {
                            event.preventDefault();
                            
                            // URL im Eingabefeld aktualisieren
                            urlInput.value = href;
                            
                            // URL im iframe laden
                            iframe.src = href;
                        }
                    });
                }
            } catch (error) {
                console.warn('Einige Sicherheitsfunktionen können nicht geladen werden:', error);
            }
        });

        // Fehlerbehandlung für iframe
        iframe.addEventListener('error', function() {
            updateStatus('Fehler beim Laden der Seite');
        });
    </script>
</body>
</html>
